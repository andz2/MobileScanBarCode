<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ru.xxmmk.mobilescanbarcode.EnterCode">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:layout_above="@+id/EnterChancel">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Номер"
            android:id="@+id/textNumId"
            android:textSize="27dp"
            android:gravity="top|center_horizontal"
            android:textStyle="bold" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center">

                <Button
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:text="1 "
                    android:id="@+id/button1"
                    android:layout_column="1"
                    android:background="@drawable/btn_calc_state"
                    android:textColor="@color/text_white"
                    android:textSize="40dp"
                    android:layout_margin="20dp" />

                <Button
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:text="2 "
                    android:id="@+id/button2"
                    android:layout_column="2"
                    android:background="@drawable/btn_calc_state"
                    android:textColor="@color/text_white"
                    android:layout_margin="20dp"
                    android:textSize="40dp" />

                <Button
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:text="3 "
                    android:id="@+id/button3"
                    android:layout_column="3"
                    android:background="@drawable/btn_calc_state"
                    android:textColor="@color/text_white"
                    android:layout_margin="20dp"
                    android:textSize="40dp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center">

                <Button
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:text="4 "
                    android:id="@+id/button4"
                    android:layout_column="1"
                    android:background="@drawable/btn_calc_state"
                    android:textColor="@color/text_white"
                    android:textSize="40dp"
                    android:layout_margin="20dp" />

                <Button
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:text="5 "
                    android:id="@+id/button5"
                    android:layout_column="2"
                    android:background="@drawable/btn_calc_state"
                    android:textColor="@color/text_white"
                    android:layout_margin="20dp"
                    android:textSize="40dp" />

                <Button
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:text="6 "
                    android:id="@+id/button6"
                    android:layout_column="3"
                    android:background="@drawable/btn_calc_state"
                    android:textColor="@color/text_white"
                    android:layout_margin="20dp"
                    android:textSize="40dp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center">

                <Button
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:text="7 "
                    android:id="@+id/button7"
                    android:layout_column="1"
                    android:background="@drawable/btn_calc_state"
                    android:textColor="@color/text_white"
                    android:textSize="40dp"
                    android:layout_margin="20dp"
                    />

                <Button
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:text="8 "
                    android:id="@+id/button8"
                    android:layout_column="2"
                    android:background="@drawable/btn_calc_state"
                    android:textColor="@color/text_white"
                    android:layout_margin="20dp"
                    android:textSize="40dp" />

                <Button
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:text="9 "
                    android:id="@+id/button9"
                    android:layout_column="3"
                    android:background="@drawable/btn_calc_state"
                    android:textColor="@color/text_white"
                    android:layout_margin="20dp"
                    android:textSize="40dp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center">

                <Button
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:text="&lt; "
                    android:id="@+id/backspace"
                    android:layout_column="1"
                    android:background="@drawable/btn_ch_calc_state"
                    android:textColor="@color/text_white"
                    android:textSize="40dp"
                    android:layout_margin="20dp"
                    />

                <Button
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:text="0 "
                    android:id="@+id/button0"
                    android:layout_column="2"
                    android:background="@drawable/btn_calc_state"
                    android:textColor="@color/text_white"
                    android:layout_margin="20dp"
                    android:textSize="40dp" />

                <Button
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:text="Ok "
                    android:id="@+id/ent"
                    android:layout_column="3"
                    android:background="@drawable/btn_calc_ok_state"
                    android:textColor="@color/text_white"
                    android:layout_margin="20dp"
                    android:textSize="35dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="Отмена"
        android:id="@+id/EnterChancel"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_scan_state"
        android:textSize="30dp"
        android:textColor="@color/text_white" />

</RelativeLayout>
