<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ru.xxmmk.mobilescanbarcode.SetT1"
    android:orientation="vertical"
    android:background="#d6363636">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout4"
        android:layout_above="@+id/SetT1Ch">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Сканируйте или внесите вручную номер 1-Т"
            android:id="@+id/textView4"
            android:textSize="40dp"
            android:gravity="top|center_horizontal"
            android:paddingBottom="20dp"
            android:paddingTop="10dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Ручной ввод"
            android:drawableLeft="@android:drawable/ic_dialog_dialer"
            android:id="@+id/SetT1M"
            android:background="@drawable/btn_kpp_state"
            android:textColor="@color/text_white"
            android:textSize="30dp"
            android:layout_above="@+id/linearLayout4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical|center_horizontal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/abc_ic_search"
            android:text="Сканировать"
            android:id="@+id/SetT1A"
            android:background="@drawable/btn_scan_state"
            android:onClick="scanBarcodeCustomOptions"
            android:textColor="@color/text_white"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="30dp"
            android:layout_marginTop="20dp" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Отмена"
        android:id="@+id/SetT1Ch"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:background="#999999" />

</RelativeLayout>
