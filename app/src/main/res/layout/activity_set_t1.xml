<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ru.xxmmk.mobilescanbarcode.SetT1"
    android:background="#d6363636">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Сканируйте или внесите вручную Т1"
            android:id="@+id/textView4"
            android:textSize="40dp"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="2.05"
            android:paddingBottom="20dp"
            android:paddingTop="10dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ручной ввод"
            android:drawableLeft="@android:drawable/ic_dialog_dialer"
            android:id="@+id/SetT1M"
            android:background="@drawable/btn_kpp_state"
            android:textColor="@color/text_white"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="30dp"
            android:paddingBottom="20dp" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/abc_ic_search"
        android:text="Сканировать"
        android:id="@+id/SetT1A"
        android:background="@drawable/btn_scan_state"
        android:paddingLeft="10dp"
        android:onClick="scanBarcodeCustomOptions"
        android:textColor="@color/text_white"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
