<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".StartScreen"
    android:clickable="false"
    android:background="@drawable/mymmk_2">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/linearLayout"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="138dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Сканер ШК"
                android:id="@+id/textView"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffffff"
                android:textSize="50dp"
                android:gravity="center_vertical|center_horizontal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Резервная система считывания штрих кодов"
                android:id="@+id/textView2"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_above="@+id/LognText"
                android:layout_alignParentRight="true"
                android:textSize="16dp"
                android:textColor="@android:color/white"
                android:gravity="center_vertical|center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/Loginbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@android:drawable/ic_dialog_info"
                android:text="@string/LoginBtn"
                android:src="@android:drawable/ic_menu_gallery"
                android:singleLine="false"
                android:gravity="left|fill_vertical"
                android:background="@drawable/btm_aut"
                android:drawablePadding="10dp"
                android:textColor="#ffffff"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp" />

            <Button
                android:id="@+id/SetKPP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@android:drawable/ic_menu_sort_by_size"
                android:text="@string/getKPP"
                android:src="@android:drawable/ic_menu_gallery"
                android:singleLine="false"
                android:gravity="left|fill_vertical"
                android:background="@drawable/btn_inact"
                android:drawablePadding="10dp"
                android:textColor="@android:color/darker_gray"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="1dp" />

            <Button
                android:id="@+id/ScanBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@android:drawable/ic_menu_set_as"
                android:text="@string/ScanBtn"
                android:src="@android:drawable/ic_menu_gallery"
                android:singleLine="false"
                android:gravity="left|fill_vertical"
                android:background="@drawable/btn_inact"
                android:drawablePadding="10dp"
                android:textColor="@android:color/darker_gray"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:onClick="scanBarcodeCustomOptions" />

            <Button
                android:id="@+id/ExitBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@android:drawable/ic_menu_close_clear_cancel"
                android:text="@string/ExitBtn"
                android:src="@android:drawable/ic_menu_gallery"
                android:singleLine="false"
                android:gravity="left|fill_vertical"
                android:background="@drawable/btn_exit_state"
                android:drawablePadding="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="3dp"
                android:textColor="#ffffffff"
                android:layout_marginBottom="5dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/imageView2"
                android:background="#ff2c4476"
                android:layout_alignTop="@+id/imageView2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:adjustViewBounds="false" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/Logo"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/full_logo5"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <!--fragment
        android:tag="scan_fragment"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:name="ru.xxmmk.mobilescanbarcode.StartScreen$ScanFragment" tools:layout="@layout/fragment_scan"
        android:id="@+id/fragment" /-->


</RelativeLayout>
